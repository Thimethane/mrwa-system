# ============================================================================
# .env.example - Environment Template
# ============================================================================

# ===========================================
# MRWA Environment Configuration
# ===========================================

# Application
NODE_ENV=development
APP_NAME=MRWA
APP_VERSION=1.0.0
DEBUG=false

# Security (IMPORTANT: Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://mrwa:mrwa_dev_password@localhost:5432/mrwa
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50

# AI Service (Get your key from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-3
GEMINI_MAX_TOKENS=8192

# Storage
STORAGE_PROVIDER=local
STORAGE_PATH=./storage

# For Supabase Storage (optional)
# STORAGE_PROVIDER=supabase
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_KEY=your-supabase-anon-key

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Execution
MAX_EXECUTION_TIME_SECONDS=3600
MAX_RETRIES_PER_STEP=3

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=INFO

# Postgres Password (for Docker)
POSTGRES_PASSWORD=mrwa_dev_password
